!!! 1.1
%html
  %head
    %link{ :rel => "stylesheet", :type => "text/css", :href => "http://fonts.googleapis.com/css?family=Droid+Sans:regular,bold|Droid+Sans+Mono" }
    = css 'blueprint/screen'
    = css 'blueprint/print', 'print'
    /[if IE 8]
      = css 'blueprint/ie'
    = css 'layout'
    - stylesheets do |path|
      = css path
    %title= @title || 'A/B Test Me'
  %body
    .container
      .top
        .span-12
          .logo A/B Test Me
        - if current_user
          .span-12.last
            .span-4.nav.align-left
              /%a{ :href => '/get_started' } Get Started
              &nbsp;
            .span-4.nav
              /%a{ :href => '/account' } Account
              &nbsp;
            .span-4.nav.last
              %a{ :href => '/sessions/destroy' } Log out
        - else
          .span-12.last
            .span-4.nav
              %a.sign_up Sign up
            .span-4.nav
              %a{ :href => 'http://github.com/winton/a_b' } Github
            /
              .span-3.nav
                %a{ :href => '/help' } Help
            .span-4.nav.last
              %a.log_in Log in
            .clear
            .dialog.sign_up.hide
              %form{ :action => '/users', :method => 'post' }
                %label{ :for => 'sign_up_email' } Email
                %input.email{ :id => 'sign_up_email', :name => 'user[email]', :type => 'text' }
                %label{ :for => 'sign_up_password' } Password
                %input.password{ :id => 'sign_up_password', :name => 'user[password]', :type => 'password' }
                %label.confirm{ :for => 'sign_up_password_confirmation' } Confirm
                %input.password{ :id => 'sign_up_password_confirmation', :name => 'user[password_confirmation]', :type => 'password' }
                %input.submit{ :type => 'submit', :value => 'Submit' }
            .dialog.log_in.hide
              %form{ :action => '/sessions', :method => 'post' }
                %label{ :for => 'log_in_email' } Email
                %input.email{ :id => 'log_in_email', :name => 'session[email]', :type => 'text' }
                %label{ :for => 'log_in_password' } Password
                %input.password{ :id => 'log_in_password', :name => 'session[password]', :type => 'password' }
                %input.submit{ :type => 'submit', :value => 'Submit' }
      = yield
    = js 'jquery'
    = js 'layout'
    - javascripts do |path|
      = js path
    - if @sites
      %script= "window.dashboard = new Dashboard(#{@sites.to_json});"